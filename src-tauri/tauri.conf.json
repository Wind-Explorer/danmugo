{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "danmugo",
  "version": "0.1.0",
  "identifier": "cn.wind-explorer.danmugo",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "danmugo",
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "maximized": true,
        "visibleOnAllWorkspaces": true,
        "closable": false,
        "minimizable": false,
        "resizable": false,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
